
@model List<Settlement>
@{
    //ViewBag.vAmount = @settlement.vAmount;
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/img/style1.css">
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
            border-spacing: 0px;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 10px;
        }
    </style>
    <script>
        function navAction() {
            var x = document.getElementById("myTopnav");
            if (x.className == "onTopNav") {
                x.className += " responsive";
            } else {
                x.className = "onTopNav";
            }
        }
    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">NAAG Tobacco Settlement</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" @Html.ActionLink("Home", "Index")>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://www.naag.org/">NAAG Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("Settlement", "State")></a>
                    </li><!--
                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("Settlement Data", "Settlement")></a>
                    </li>-->
                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("About Us", "AboutUs")></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="bg-img">
        <div class="fade-in-text fade-out-text">
            <div style="text-align:center">
                <p>
                    In fiscal year 2020, states will collect $27.2 billion from tobacco taxes and settlements in court, but will only spend $740 million in the same year. That’s only 2.7% of it spent on programs that can stop young people from becoming smokers and help current smokers quit.                    <br /><br />
                    Learn more at <a href="https://www.cdc.gov/tobacco/">cdc.gov/tobacco</a>.
                </p>
            </div>
        </div>
    </div>
    <br><h3 style="color:white">NAAG Tobacco Settlements Data (1998-2020):</h3>

    <table class="table table-bordered table-striped" width="100%">
        <thead>
            <tr>
                <th align="left" style="color:white;background-color:#3173AD;">State</th>
                <th align="left" style="color:white;background-color:#3173AD;">Year</th>
                <th align="left" style="color:white;background-color:#3173AD;">Topic</th>
                <th align="left" style="color:white;background-color:#3173AD;">Indicator</th>
                <th align="left" style="color:white;background-color:#3173AD;">SubMeasure</th>
                <th align="left" style="color:white;background-color:#3173AD;">Amount</th>
                <th align="left" style="color:white;background-color:#3173AD;">Source</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var settlement in Model)
            {
                <tr>
                    <td>@settlement.vState</td>
                    <td>@settlement.vYear</td>
                    <td>@settlement.vTopic</td>
                    <td>@settlement.vIndicator</td>
                    <td>@settlement.vSubMeasure</td>
                    <td>@string.Format("{0:C}",settlement.vAmount)</td>
                    <td>@settlement.vSource</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
